.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx 0 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: #ffffff;
  z-index: 9;
  height: 45px;
  clear: both;
}
.containerWarp {
  padding-top: 45px;
}
/* 城市 */
.city text {
  font-size: 30rpx;
  margin-right: 12rpx;
}
.icon_arrow {
  width: 25rpx;
  height: 15rpx;
}

.header .swiper-tab {
  font-size: 34rpx;
}
.header .swiper-tab .swiper-tab-list:nth-child(2) {
  margin: 0 42rpx;
}
/* 搜索 */
.icon_search {
  width: 38rpx;
  height: 40rpx;
}

/* tab */
@import "../../../common/lib/weui.wxss";

.swiper1 {
  width: 100%;
  padding: 0;
  margin-bottom: 0;
}
.swiper1 swiper {
  height: 350rpx;
  display: block;
}
.page-section-title {
  padding: 0;
}

.swiper-box image {
  width: 100%;
}

.swiper-item {
  display: block;
  height: 350px;
}
.page-section-title {
  margin-top: 60rpx;
  position: relative;
}
.info {
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}
.page-foot {
  margin-top: 50rpx;
}

.swiper-tab {
  text-align: center;
  line-height: 80rpx;
}
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 110rpx;
  color: #777777;
}
.on {
  color: #c4a97c;
  border-bottom: 5rpx solid #c4a97c;
}

.swiper-box {
  height: 100%;
  width: 100%;
}

/* 场地列表 */
.listField ul li {
  display: block;
  padding-top: 24rpx;
  background: #ffffff;
}
.listField ul li .listHeader {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.listField ul li .listHeader image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.listField ul li .listHeader .listHeaderBar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.listField ul li .listHeader .listHeader_title {
  font-size: 34rpx;
  font-weight: 400;
  margin-left: 15rpx;
}

.listField ul li .listHeader .listHeader_time {
  font-size: 24rpx;
  color: #9f9f9f;
}
.listField .listCentor .listFieldData2Img,
.listField .listCentor .listFieldData1Img {
  width: 100%;
  height: 450rpx;
  overflow: hidden;
  position: relative;
}
.listField .listCentor .listFieldData2Img image,
.listField .listCentor .listFieldData1Img image {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.listField .listCentor .listFieldData2Img .headerImgLength,
.listField .listCentor .listFieldData1Img .headerImgLength {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 22rpx;
  bottom: 20rpx;
  margin: auto;
  background: rgba(204, 204, 204, 0.3);
  text-align: center;
  line-height: 50rpx;
  border-radius: 50%;
  color: #fefefe;
  font-size: 22rpx;
}

/*  场地列表图片*/
.listCentor {
  margin-top: 14rpx;
  padding: 0 10rpx 0 20rpx;
}
.listCentor video {
  width: 100%;
}
.listCentor ul {
  display: inline-block;
}
.listCentor ul li {
  display: inline-block;
  width: 230rpx;
  height: 230rpx;
  float: left;
  padding: 0;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  overflow: hidden;
}

/* 简介 */
.list_description {
  font-size: 30rpx;
  color: #666666;
  text-indent: 1em;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.list_descBar {
  padding: 10rpx 10rpx;
  background: #ffffff;
  display: block;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 地址 */
.list_location {
  font-size: 22rpx;
  color: #bcbcbc;
  float: left;
  width: 75%;
}

/* 收藏 */
.list_storeUp {
  float: right;
  font-size: 24rpx;
  color: #000000;
  display: flex;
  align-items: center;
}
.list_storeUp view {
  display: flex;
  align-items: center;
}
.list_storeUp image {
  width: 36rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 点赞 */
.list_likes {
  font-size: 24rpx;
  color: #000000;
  float: right;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}
.list_likes view {
  display: flex;
  align-items: center;
}
.list_likes image {
  width: 33rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.transitionBar {
  height: 30rpx;
  background: #eeeeee;
}

.show {
  display: block;
}
.hidden {
  display: none;
}

/* 没有更多数据了 */
.listField .listFieldDataTheEnd {
  font-size: 28rpx;
  color: #999;
  background: #eeeeee;
  text-align: center;
}

/* 预告列表 */
.listField3 .listCentor ul li {
  width: 710rpx;
  height: 400rpx;
  margin: 0;
  overflow: hidden;
}
.listField3 .listCentor {
  border-bottom: 1rpx solid #e1e1e1;
}
.listField3 .listCentor ul li image {
  width: 100%;
  height: 100%;
}

.listField3 .list_description {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.listField3 .list_location3 {
  font-size: 24rpx;
  color: #9b9b9b;
}

.listField3 .list_descBar {
  font-size: 24rpx;
}
.listField3 .list_descBar image {
  width: 44rpx;
  height: 44rpx;
}
.listField3 .list_descBar .list_location {
  line-height: 0rpx;
  color: #666666;
  font-size: 24rpx;
}
.listField3 .list_status {
  font-size: 30rpx;
  color: #c4a97c;
}
