.headImg {
  height: 420rpx;
  overflow: hidden;
}
.headImg image {
  width: 100%;
  height: 100%;
}
.traTopic {
  font-size: 30rpx;
  color: #000000;
  padding: 0 30rpx;
  margin: 40rpx 0;
}
.traStateBar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.traStateBar .followingBar {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 30rpx;
}
.traStateBar .icon_follow_gold {
  width: 41rpx;
  height: 45rpx;
}
.traStateBar .followingBtn {
  width: 118rpx;
  height: 48rpx;
  border: 1rpx solid #c4a97d;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #c4a97d;
  text-align: center;
  line-height: 48rpx;
  margin-left: 10rpx;
}

.traStateBar .list_storeUp {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-right: 30rpx;
}
.traStateBar .list_storeUp view {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.traStateBar .list_storeUp image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.traStateBar .list_storeUp text {
  color: #c4a97d;
  font-size: 24rpx;
}
.transitionBar {
  height: 30rpx;
  background: #eeeeee;
}
.timeLocationWarp ul {
  border-bottom: 1rpx solid #d2d2d2;
  display: block;
}
.timeLocationWarp ul li {
  display: flex;
  align-items: center;
}
.timeLocationWarp ul li .icon_box {
  margin: 0 15rpx 0 30rpx;
}
.timeLocationWarp ul li .icon_box image {
  width: 44rpx;
  height: 44rpx;
}
.timeLocationWarp ul li .created_atBox {
  width: 100%;
  height: 100%;
  border-bottom: 1rpx solid #d2d2d2;
  padding: 50rpx 0 38rpx 15rpx;
}
.timeLocationWarp ul li .created_atBox view {
  width: 100%;
  display: block;
}
.timeLocationWarp ul li .created_atBox .start_time {
  font-size: 30rpx;
}
.timeLocationWarp ul li .created_atBox .stop_time {
  font-size: 24rpx;
}

.timeLocationWarp ul li .locationBox {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.timeLocationWarp ul li .locationBox .location {
  padding-left: 15rpx;
  font-size: 30rpx;
}
.timeLocationWarp ul li .locationBox .map image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 25rpx;
}

/* 活动简介 */
.descriptionWarp {
  border-bottom: 1rpx solid #d2d2d2;
}
.descriptionWarp .descriptionTitle {
  margin-top: 44rpx;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.descriptionWarp .descriptionTitle .desLine {
  width: 6rpx;
  height: 36rpx;
  background: #c4a97c;
  display: inline-block;
  margin-right: 25rpx;
}
.descriptionWarp .description {
  font-size: 26rpx;
  padding: 32rpx 30rpx 32rpx 70rpx;
}

.descriptionDetail .detailMedias.on {
  height: 400rpx;
  overflow: hidden;
}
.descriptionDetail .detailMedias {
  padding: 35rpx 20rpx 0 20rpx;
}
.descriptionDetail .detailMedias ul li {
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
  display: block;
}
.descriptionDetail .detailMedias ul li image {
  width: 100%;
}
.descriptionDetail .switch {
  height: 120rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.descriptionDetail .switch image {
  width: 42rpx;
  height: 26rpx;
}

/* 立即报名 */
.nowSignUp {
  height: 200rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 90rpx;
}
.nowSignUp text {
  width: 354rpx;
  height: 78rpx;
  border: 1rpx solid #d0bb98;
  color: #d0bb98;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
}

/* 热线电话 */

.hotline {
  width: 100%;
  height: 89rpx;
  border-top: 1rpx solid #c4a97d;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  margin: auto;
  background: #ffffff;
}

.hotline image {
  width: 51rpx;
  height: 61rpx;
}
